# User configuration
eval "$(oh-my-posh init zsh --config ~/princes.json)"
eval "$(zoxide init zsh)"
function dcu () {
  if [ "$1" != "" ]
    then
        docker compose -f docker-compose.$1.yml $2 $3 $4 $5 $6 $7 $8 $9
    else
        docker ps
    fi # closing statement of if-else block
}

function dcd () {
  if [ "$1" != "" ]
    then
        docker compose -f docker-compose.$1.yml down
    else
        docker ps
    fi # closing statement of if-else block
}

function dcll () {
 if [ "$1" != "" ]
    then
        docker compose -f docker-compose.$1.yml logs -f $2 | tspin
      else
        docker ps
    fi # closing statement of if-else block
}

function dcb () {
  if [ "$1" != "" ]
    then
        docker compose -f docker-compose.$1.yml build
    else
        docker ps
    fi # closing statement of if-else block
}

function dct () {
  docker compose -f docker-compose.local.yml exec repkaback python manage.py test $1 --settings=main.settings.test $2 $3 $4 $5
}

